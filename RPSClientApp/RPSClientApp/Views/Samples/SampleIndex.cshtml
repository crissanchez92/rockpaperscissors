@model RPSClientApp.Models.SamplesModel


<div class="RPSContentHolder"> 
    <h3>@Html.DisplayNameFor(m => m.Samples)</h3>
    <ul class="list-group">
        @foreach(var sample in Model.Samples)
        {
            <li class="list-group-item">
                @sample
                @using (Html.BeginForm("DownloadSample", "Samples", FormMethod.Post, new { id = "DownloadForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("sample", sample)
                    <input type="submit" class="btn btn-default" value="Download"/>
                }
            </li>
        }
    </ul>
</div>